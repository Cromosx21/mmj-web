---
import { Image } from "astro:assets";
import { type IProyectResume } from "@src/data/ProyectsHome.ts";
import Check from "@src/Images/icons/Check.astro";

interface Props {
  proyectResume: IProyectResume;
}

const { proyectResume } = Astro.props;
---

<article
  class="flex h-[500px] items-start justify-between gap-12 rounded-r border border-secondary-100 bg-white-500 shadow-[16px_16px_24px_0px_#18181B30]"
>
  <div
    class="flex h-full max-w-md flex-col items-start justify-between pb-8 pl-8 pt-7"
  >
    <div>
      <hgroup class="mb-6">
        <h5 class="mb-3 text-xl text-black-500">
          {proyectResume.title}
        </h5>
        <p class="mb-2 text-base font-light leading-5">
          {proyectResume.description1}
        </p>
        <p class="text-base font-light leading-5">
          {proyectResume.description2}
        </p>
      </hgroup>
      <ul>
        <h5 class="text-black-500">Logros del proyecto</h5>
        {
          proyectResume.achievements.map((achievement) => (
            <li class="flex items-center gap-2 font-light text-black-500">
              <Check />
              <span> {achievement} </span>
            </li>
          ))
        }
      </ul>
    </div>
    <a
      href="#"
      class="inline-block rounded border border-black-300 px-4 py-2 text-black-300 hover:border-primary-400 hover:text-primary-400"
      >Ver m√°s proyectos</a
    >
  </div>
  <picture>
    <Image src={proyectResume.image} alt={"Imagen del proyecto de MMJ"} />
  </picture>
</article>
