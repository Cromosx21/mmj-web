---
import LogoMpLab from "@src/Images/Home/LogoMpLab.webp";
import LogoAltium from "@src/Images/Home/LogoAltium.webp";
import LogoMicrochip from "@src/Images/Home/LogoMicrochip.webp";
import LogoNextion from "@src/Images/Home/LogoNextion.webp";
import LogoSiemens from "@src/Images/Home/LogoSiemens.webp";
import { Image } from "astro:assets";
---

<section class="bg-white-500">
  <div class="mx-auto max-w-7xl px-7 pb-16 pt-12 md:px-8">
    <h3
      class="mb-14 text-center text-[40px] font-bold leading-tight text-black-800 lg:leading-normal"
    >
      Nuestros Clientes y Colaboradores
    </h3>
    <ul class="slider mx-auto max-w-6xl overflow-hidden">
      <input
        checked
        type="radio"
        name="clientes"
        id="cliente1"
        class="hidden"
      />
      <input type="radio" name="clientes" id="cliente2" class="hidden" />
      <input type="radio" name="clientes" id="cliente3" class="hidden" />
      <input type="radio" name="clientes" id="cliente4" class="hidden" />
      <input type="radio" name="clientes" id="cliente5" class="hidden" />
      <li class="flex w-full transition-transform duration-300 ease-in-out">
        <ul class="flex w-full shrink-0 items-center justify-between">
          <li>
            <Image width={120} src={LogoMpLab} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={120} src={LogoMpLab} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={120} src={LogoMpLab} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={120} src={LogoMpLab} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={120} src={LogoMpLab} alt="Logo de MPLAB" />
          </li>
        </ul>
        <ul class="flex w-full shrink-0 items-center justify-between">
          <li>
            <Image width={184} src={LogoAltium} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={184} src={LogoAltium} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={184} src={LogoAltium} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={184} src={LogoAltium} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={184} src={LogoAltium} alt="Logo de MPLAB" />
          </li>
        </ul>
        <ul class="flex w-full shrink-0 items-center justify-between">
          <li>
            <Image width={208} src={LogoMicrochip} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={208} src={LogoMicrochip} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={208} src={LogoMicrochip} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={208} src={LogoMicrochip} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={208} src={LogoMicrochip} alt="Logo de MPLAB" />
          </li>
        </ul>
        <ul class="flex w-full shrink-0 items-center justify-between">
          <li>
            <Image width={86} src={LogoNextion} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={86} src={LogoNextion} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={86} src={LogoNextion} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={86} src={LogoNextion} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={86} src={LogoNextion} alt="Logo de MPLAB" />
          </li>
        </ul>
        <ul class="flex w-full shrink-0 items-center justify-between">
          <li>
            <Image width={222} src={LogoSiemens} alt="Logo de MPLAB" />
          </li>
          <li>
            <Image width={222} src={LogoSiemens} alt="Logo de MPLAB" />
          </li>
