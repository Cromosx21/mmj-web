---
import Calendar from "@src/Images/icons/Calendar.astro";
import Cart from "@src/Images/icons/Cart.astro";
import Circle from "@src/Images/icons/Circle.astro";
import Clock from "@src/Images/icons/Clock.astro";
import Vivo from "@src/Images/icons/Vivo.astro";
import { Image } from "astro:assets";

interface ICourse {
  bgCourseCard: ImageMetadata;
  startDate: string;
  title: string;
  description: string;
  modality: string;
  duration: number;
  hours: number;
  priceBase: number;
  priceReal: number;
}

const { course } = Astro.props;
const {
  bgCourseCard,
  startDate,
  title,
  description,
  modality,
  duration,
  hours,
  priceBase,
  priceReal,
} = course as ICourse;
---

<article
  class="min-w-72 snap-center rounded-xl px-7 py-8 shadow-[0px_8px_16px_0px_#18181B30]"
>
  <Image
    src={bgCourseCard}
    alt={"Imagen del cuso de < t i t l e>"}
    class="mb-4 rounded"
  />
  <p class="mb-1 flex gap-1 rounded bg-[#EDE7F3] px-3 py-2">
    <Circle />
    <span class="text-sm text-primary-500">Inicia:</span>
    <span class="text-sm text-black-500">{startDate}</span>
  </p>
  <header>
    <h2 class="relative mb-3 text-xl text-black-500">
      {title}
      <span class="absolute bottom-0 left-0 h-[2px] w-4/5 bg-primary-400">
        <span
          class="absolute -top-1 right-0 h-2 w-2 rounded-full bg-primary-400"
        >
        </span>
      </span>
    </h2>
    <p class="mb-8 text-pretty font-light leading-5 tracking-wide">
      {description}
    </p>
  </header>
  <ul class="mb-1 flex items-center justify-center">
    <li class="flex flex-col items-center gap-1 px-3 py-2">
      <Vivo />
      <span class="text-sm font-light text-black-400">{modality}</span>
    </li>
    <li class="flex flex-col items-center gap-1 px-3 py-2">
      <Calendar />
      <span class="text-sm font-light text-black-400">{duration} semanas</span>
    </li>
    <li class="flex flex-col items-center gap-1 px-3 py-2">
      <Clock fill="#4C545F" width="24" height="24" />
      <span class="text-sm font-light text-black-400">{hours} horas</span>
    </li>
  </ul>
  <footer class="flex items-end justify-between">
    <span class="flex flex-col items-center">
      <span class="text-sm text-black-300"
        >$ {priceBase} <span class="text-sm">USD</span></span
      >
      <a
        href="#"
        class="flex h-fit items-center gap-1 rounded border border-primary-500 bg-primary-500 px-3 py-4"
      >
        <Cart fill="#FBFCFC" />
        <span class="text-sm text-white-100"
          >$ {priceReal} <span class="text-sm text-[#FFF]">USD</span></span
        >
      </a>
    </span>
    <a href="#" class="flex rounded border border-black-300 px-3 py-4">
      <!-- El flex es para igualar las alturas de ambos botones, algo que no entiendo la razón, pero funciona -->
      <span class="text-sm text-black-300">Más detalles</span>
    </a>
  </footer>
</article>
