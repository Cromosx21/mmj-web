---
import '@fontsource-variable/roboto-condensed'; // Supports weights 100-900
// import Cart from '../images/icons/Cart.astro';
import Cart from '../Images/icons/Cart.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav
			class="max-w-7xl px-8 py-2 mx-auto bg-white flex justify-between items-center"
		>
			<!-- El px es porque el tamaño no es 1440 px sino menos, px-8 menos -->
			<img
				src="https://pub-eedd7c54d302456e9ce5b946fb0992af.r2.dev/LogoMMJ.png"
				alt="Logo de MMJ Smart Electronics"
			/>
			<ul class="flex gap-4 font-sans font-normal text-black-600 text-base">
				<a href="#" class="px-4 py-1">Inicio</a>
				<a href="#" class="px-4 py-1">Cursos</a>
				<a href="#" class="px-4 py-1">Servicios</a>
				<a href="#" class="px-4 py-1">Proyectos</a>
				<a href="#" class="px-4 py-1">Contáctanos</a>
			</ul>
			<Cart />
		</nav>
		<slot />
		<Footer />
	</body>
	<style is:global>
		:root {
			--accent: 136, 58, 234;
			--accent-light: 224, 204, 250;
			--accent-dark: 49, 10, 101;
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}
		html {
			font-family:
				'Roboto Condensed Variable',
				Ubuntu,
				system-ui,
				-apple-system,
				BlinkMacSystemFont,
				'Segoe UI',
				Roboto,
				Oxygen,
				Cantarell,
				'Open Sans',
				'Helvetica Neue',
				sans-serif;
			background: #fff;
		}

		code {
			font-family:
				Menlo,
				Monaco,
				Lucida Console,
				Liberation Mono,
				DejaVu Sans Mono,
				Bitstream Vera Sans Mono,
				Courier New,
				monospace;
		}
	</style>
</html>
